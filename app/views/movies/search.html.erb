<%= button_to "Find Top Rated Movies", movies_top_rated_path, method: :get %>

<p>OR</p>

<%= form_tag(movies_search_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Find Movies") %>
<% end %>



<% @movies.each do |movie| %>
    <p>Title: <%= movie.original_title %> - Average Rating: <%= movie.vote_average %> </p>
<% end %>
