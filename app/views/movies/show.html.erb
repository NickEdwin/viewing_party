<h2><%= @movie.original_title %></h2> <%= button_to "Create Viewing Party for This Movie", parties_path, method: :get, params: {id: @movie.id}  %>
<p>Average Rating: <%= @movie.vote_average %> | Runtime: <%= @movie.runtime %> mins | Genre(s): <%= @movie.genre_names %> </p>
<hr>
<h5>Summary</h5>
<p> <%= @movie.summary %> </p>
<h5>Cast</h5>
<% @cast.each do |cast_member| %>
<p><%= cast_member[:name] %> as <%= cast_member[:character] %></p>
<% end %>
<hr>
<% if @reviews.any? %>
  <h5><%= @reviews.count %> Reviews</h5>
  <% @reviews.each do |review| %>
    <p>Author: <%= review[0] %></p>
    <p><%= review[1] %></p>
  <% end %>
<% end %>
<% if @trailer %>
<hr>
<h3>Official Trailer: </h3>
  <iframe width="420" height="315"
  src="https://www.youtube.com/embed/<%= @trailer %> ">
  </iframe>
<% end %>
<hr>
<h3>Recommended Movies:</h3>
<% @recommended.each do |recommendation| %>
  <%= link_to recommendation.original_title, "/movies/#{recommendation.id}" %><br>
<% end %>
