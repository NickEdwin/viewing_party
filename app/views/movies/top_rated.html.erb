
  <%= button_to "Find Top Rated Movies", movies_path, method: :get %>

  <p>OR</p>

  <%= form_tag(movies_path) do %>
    <%= text_field_tag :find_movies, nil, placeholder: 'Search by movie title' %>
    <%= submit_tag 'Find Movies', class: 'submit' %>
  <% end %>



<% @movies.each do |movie| %>
<%= require"pry"; binding.pry %>
    <p>Title: <%= movie.original_title %> - Average Rating: <%= movie.vote_average %> </p>
<% end %>
